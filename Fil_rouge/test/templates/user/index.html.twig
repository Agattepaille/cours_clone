{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<h1>User index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Lastname</th>
				<th>Firstname</th>
				<th>Phone</th>
				<th>Address</th>
				<th>City</th>
				<th>Zipcode</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.id }}</td>
					<td>{{ user.email }}</td>
					<td>
						{# {{ user.roles ? user.roles|json_encode : '' }}</td> #}
						{% for role in user.roles %}
							{% if role == "ROLE_ADMIN" %}
								{% set name = "Expert" %}
							{% elseif role == "ROLE_SENIOR" %}
								{% set name = "SÃ©nior" %}
							{% elseif role == "ROLE_APPRENTI" %}
								{% set name = "Apprenti" %}
								{% elseif role == "ROLE_CLIENT" %}
								{% set name = "Client" %}
							{% else %}
								{% set name = " " %}
							{% endif %}
							{{ name }}
						{% endfor %}
					</td>
					<td>{{ user.lastname }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.phone }}</td>
					<td>{{ user.address }}</td>
					<td>{{ user.city }}</td>
					<td>{{ user.zipcode }}</td>
					<td>
						<a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
						<a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
